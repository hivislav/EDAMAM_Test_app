<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="167dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_white">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F5F9"
        android:contentDescription="@string/border_line_item_element_recycler_menu_fragment" />

    <ImageView
        android:id="@+id/imageItemRecyclerViewMenuFragment"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/placeholder"
        android:contentDescription="@string/pizza_image_item_recycler_menu_fragment" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleItemRecyclerViewMenuFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_item_menu_fragment_16sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/item_title_text_color"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/imageItemRecyclerViewMenuFragment"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ветчина и грибы"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/descriptionItemRecyclerViewMenuFragment"
        android:layout_width="171dp"
        android:layout_height="68dp"
        android:textSize="@dimen/text_size_item_menu_fragment_14sp"
        android:textColor="#AAAAAD"
        android:fontFamily="@font/sf_ui_text_medium"
        android:layout_marginTop="8dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="16dp"
        android:maxLines="4"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imageItemRecyclerViewMenuFragment"
        app:layout_constraintTop_toBottomOf="@id/titleItemRecyclerViewMenuFragment"
        tools:text="Ветчина,шампиньоны, увеличинная порция моцареллы, томатный соус"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAddItemRecyclerViewMenuFragment"
        style="@style/ButtonStyle"
        android:layout_width="87dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sf_ui_text_medium"
        app:layout_constraintTop_toBottomOf="@id/descriptionItemRecyclerViewMenuFragment"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_shape"
        android:textSize="@dimen/text_size_item_menu_fragment_13sp"
        android:padding="0dp"
        android:textColor="@color/base_pink"
        android:textAllCaps="false"
        android:text="@string/price_button_text_menu_fragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>