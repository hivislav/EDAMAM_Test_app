<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="167dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F5F9" />

    <ImageView
        android:id="@+id/imageItemRecyclerViewMenuFragment"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/placeholder"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleItemRecyclerViewMenuFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#222831"
        android:textStyle="bold"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/imageItemRecyclerViewMenuFragment"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ветчина и грибы"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/descriptionItemRecyclerViewMenuFragment"
        android:layout_width="171dp"
        android:layout_height="68dp"
        android:textSize="14sp"
        android:textColor="#AAAAAD"
        android:layout_marginTop="8dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/imageItemRecyclerViewMenuFragment"
        app:layout_constraintTop_toBottomOf="@id/titleItemRecyclerViewMenuFragment"
        tools:text="Ветчина,шампиньоны, увеличинная порция моцареллы, томатный соус"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAddItemRecyclerViewMenuFragment"
        style="@style/ButtonStyle"
        android:layout_width="87dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/descriptionItemRecyclerViewMenuFragment"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_shape"
        android:textSize="13sp"
        android:padding="0dp"
        android:textColor="#FD3A69"
        android:textAllCaps="false"
        android:text="от 345 р"/>

</androidx.constraintlayout.widget.ConstraintLayout>